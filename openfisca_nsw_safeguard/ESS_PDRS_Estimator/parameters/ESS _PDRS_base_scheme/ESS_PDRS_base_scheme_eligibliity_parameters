class PDRS__removing_or_replacing(Variable):
    value_type = bool
    entity = Building
    default_value = True
    definition_period = ETERNITY
    label = 'Are you removing or replacing End-User equipment?'
    metadata = {
        'display_question' : 'Are you removing or replacing End-User equipment?'
    }


